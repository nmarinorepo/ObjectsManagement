@model ObjectsManagementAPP.Models.ObjectRelationshipModel

@{
    ViewData["Title"] = "Edit";
}

@*<h1>Edit</h1>*@

<h4>ObjectRelationship - @Model.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="@Model.ObjectMain.Id" />
            <div class="form-group mt-2">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="ObjectMain" class="control-label"></label>
                <select asp-for="ObjectMainId" class="form-control" asp-items="ViewBag.ObjectsMain"></select>
                <span asp-validation-for="ObjectMainId" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-2">
    @Html.ActionLink("Back to list", "Edit", "ObjectMains", new {id = Model.ObjectMainId})
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
