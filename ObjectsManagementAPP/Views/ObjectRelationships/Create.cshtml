@model ObjectsManagementAPP.Models.ObjectViewModel

@{
    ViewData["Title"] = "Create";
}

@*<h1>Create</h1>*@

<h4>Object Relationship</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">

            <input type="hidden" asp-for="ObjectMainId" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-2">
                <label asp-for="objectRelationship.Name" class="control-label"></label>
                <input asp-for="objectRelationship.Name" class="form-control" />
                <span asp-validation-for="objectRelationship.Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="objectRelationship.Description" class="control-label"></label>
                <input asp-for="objectRelationship.Description" class="form-control" />
                <span asp-validation-for="objectRelationship.Description" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="objectRelationship.Type" class="control-label"></label>
                <input asp-for="objectRelationship.Type" class="form-control" />
                <span asp-validation-for="objectRelationship.Type" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-2">
    @Html.ActionLink("Back to list", "Edit", "ObjectMains", new {id = Model.ObjectMainId})
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
